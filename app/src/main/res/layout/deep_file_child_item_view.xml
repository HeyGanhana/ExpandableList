<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:padding="2dp">


    <ImageView
        android:id="@+id/file_details_item_image"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_file"/>

    <TextView
        android:id="@+id/file_detail_item_file_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/file_details_item_image"
        android:singleLine="true"
        android:text="file name"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/file_detail_item_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/file_detail_item_file_cb"
        android:singleLine="true"
        android:text="file size"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/file_detail_item_file_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
